<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="style.css"/>
  <title><!-- tmpl_var title --></title>
</head>
<body>
  <!-- tmpl_var navigator -->
  <div id=maininfo>
  <h1><!-- tmpl_var title --></h1>
    <div>
      <div>Created on <!-- tmpl_var timestamp --></div>
      <div>Tags:<!-- tmpl_var tags --></div>
      <div>Read times: <!-- tmpl_var visitor-count -->, Comments: <!-- tmpl_var msg-num --></div>
      <div id=content>
        <!-- tmpl_var body -->
      </div>
    </div>
  </div>
  <div id=sidebar>
    <!-- tmpl_var sidebar -->
  </div>
  <div id=msginfo>
    <div>
      <a name="messages"/>
      <form method="post" action="submit_message?blogid=<!-- tmpl_var blogid -->">
        <table>
        <!-- tmpl_if non-cookie -->
        <tr>
          <td>Nickname:</td>
          <td><input type="text" name="author"/></td>
        </tr>
        <tr>
          <td>email:</td>
          <td><input type="text" name="email"/></td>
        </tr>
        <tr>
          <td>password:</td>
          <td><input type="password" name="password"/></td>
        </tr>
        <!-- tmpl_else -->
        <tr>
          <td>Nickname:</td>
          <td><!-- tmpl_var author --></td>
        </tr>
        <!-- /tmpl_if -->
        <tr>
          <td>Content:</td>
          <!-- tmpl_if is-reply -->
            <input type="hidden" name="rpmsg" value="<!-- tmpl_var replied-msgid -->"/>
          <!-- /tmpl_if -->
          <td><textarea name="content"><!-- tmpl_if is-reply -->Reply <!-- tmpl_var replied-author -->:<!-- /tmpl_if --></textarea></td>
        </tr>
        </table>
        <input type="submit" value="Submit"/>
      </form>
    <!-- tmpl_var recursive-messages -->
    </div>
  </div>
</body>
</html>
